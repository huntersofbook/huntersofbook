{
  "name": "@huntersofbook/monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@7.9.1",
  "scripts": {
    "build": "pnpm rimraf packages/*/dist && pnpm -r --filter=./packages/* run build",
    "dev": "pnpm stub",
    "deploy": "pnpm stub && npm -C playground run build && npm -C interactive run build",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "play": "npm -C playground run dev",
    "release": "bumpp package.json packages/**/package.json",
    "stub": "pnpm -r --filter=./packages/* --parallel run dev",
    "apps": "pnpm -r --filter=./apps/* --parallel run dev",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:update": "vitest -u"
  },
  "devDependencies": {
    "@antfu/eslint-config": "0.26.1",
    "@huntersofbook/naiveui": "workspace:*",
    "@huntersofbook/core": "workspace:*",
    "huntersofbook": "workspace:*",
    "@huntersofbook/ui": "workspace:*",
    "docs": "workspace:*",
    "@types/lodash": "4.14.182",
    "bumpp": "8.2.1",
    "eslint": "8.22.0",
    "lodash": "4.17.21",
    "pnpm": "7.9.0",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "rollup": "2.78.0",
    "unbuild": "0.8.8",
    "semver": "7.3.7",
    "simple-git-hooks": "2.8.0",
    "splitpanes": "3.1.1",
    "typescript": "4.7.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  }
}
