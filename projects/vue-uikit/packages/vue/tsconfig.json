{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": true,
    "outDir": "dist/types",
    "baseUrl": "./",
    "paths": {
      "@huntersofbook/vue-uikit": [
        "./src"
      ]
    },
    "types": [
      "unplugin-vue-define-options/macros-global"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "volar.d.ts",
    "vite.config.ts",
    "auto-imports.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}