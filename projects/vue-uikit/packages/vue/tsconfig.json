{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "composite": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "isolatedModules": true,
    "outDir": "dist/types",
    "baseUrl": "./",
    "paths": {
      "@huntersofbook/vue-uikit": [
        "./src"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "volar.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}