{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "rebaseWhen": "conflicted",
  "schedule": ["before 6am on the first day of the month"],
  "baseBranches": ["main"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchPaths": ["docs/**"],
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["patch", "minor", "major"],
      "groupName": "docs",
      "labels": ["docs"],
      "addLabels": ["docs"]
    },
    {
      "matchPaths": ["projects/auth-vue/**"],
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["patch", "minor", "major"],
      "groupName": "auth-vue",
      "labels": ["auth-vue"],
      "addLabels": ["auth-vue"]
    },
    {
      "matchPaths": ["projects/chatwoot/**"],
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["patch", "minor", "major"],
      "groupName": "chatwoot",
      "labels": ["chatwoot"],
      "addLabels": ["chatwoot"]
    },
    {
      "matchPaths": ["projects/core/**"],
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["patch", "minor", "major"],
      "groupName": "core",
      "labels": ["core"],
      "addLabels": ["core"]
    },
    {
      "matchPaths": ["projects/huntersofbook/**"],
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["patch", "minor", "major"],
      "groupName": "huntersofbook",
      "labels": ["huntersofbook"],
      "addLabels": ["huntersofbook"]
    },
    {
      "matchPaths": ["projects/naive-ui-nuxt/**"],
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["patch", "minor", "major"],
      "groupName": "naive-ui-nuxt",
      "labels": ["naive-ui-nuxt"],
      "addLabels": ["naive-ui-nuxt"]
    },
    {
      "matchPaths": ["projects/plausible/**"],
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["patch", "minor", "major"],
      "groupName": "plausible",
      "labels": ["plausible"],
      "addLabels": ["plausible"]
    },
    {
      "matchPaths": ["projects/revenuecat/**"],
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["patch", "minor", "major"],
      "groupName": "revenuecat",
      "labels": ["revenuecat"],
      "addLabels": ["revenuecat"]
    },
    {
      "matchPaths": ["projects/schob/**"],
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["patch", "minor", "major"],
      "groupName": "schob",
      "labels": ["schob"],
      "addLabels": ["schob"]
    },
    {
      "matchPaths": ["projects/graphql/**"],
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["patch", "minor", "major"],
      "groupName": "graphql",
      "labels": ["graphql"],
      "addLabels": ["graphql"]
    },
    {
      "matchPaths": ["scripts/**"],
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["patch", "minor", "major"],
      "groupName": "scripts",
      "labels": ["scripts"],
      "addLabels": ["scripts"]
    }
  ]
}
